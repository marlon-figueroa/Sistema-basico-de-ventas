<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AdministradorBean</servlet-name>
        <servlet-class>org.punto.controladores.AdministradorBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CajeroBean</servlet-name>
        <servlet-class>org.punto.controladores.CajeroBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriaBean</servlet-name>
        <servlet-class>org.punto.controladores.CategoriaBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteBean</servlet-name>
        <servlet-class>org.punto.controladores.ClienteBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetalleVentaBean</servlet-name>
        <servlet-class>org.punto.controladores.DetalleVentaBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarcaBean</servlet-name>
        <servlet-class>org.punto.controladores.MarcaBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductoBean</servlet-name>
        <servlet-class>org.punto.controladores.ProductoBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProveedorBean</servlet-name>
        <servlet-class>org.punto.controladores.ProveedorBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginBean</servlet-name>
        <servlet-class>org.punto.controladores.LoginBean</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarCliente</servlet-name>
        <servlet-class>org.punto.controladores.RegistrarCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdministradorBean</servlet-name>
        <url-pattern>/AdministradorBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CajeroBean</servlet-name>
        <url-pattern>/CajeroBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriaBean</servlet-name>
        <url-pattern>/CategoriaBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteBean</servlet-name>
        <url-pattern>/ClienteBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetalleVentaBean</servlet-name>
        <url-pattern>/DetalleVentaBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarcaBean</servlet-name>
        <url-pattern>/MarcaBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductoBean</servlet-name>
        <url-pattern>/ProductoBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProveedorBean</servlet-name>
        <url-pattern>/ProveedorBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginBean</servlet-name>
        <url-pattern>/LoginBean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarCliente</servlet-name>
        <url-pattern>/RegistrarCliente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/index.jsp</form-login-page>
            <form-error-page>/error.jsp</form-error-page>
        </form-login-config>
    </login-config>
</web-app>
